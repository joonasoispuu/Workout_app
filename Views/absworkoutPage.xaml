<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkoutApp.Views.absworkoutPage"
             xmlns:local="clr-namespace:WorkoutApp"
             x:DataType="local:ExerciseViewModel">
    <StackLayout Padding="20">
        <Label Text="Abs" FontSize="Large" />
        <Label Text="{Binding CurrentExercise.Name}" x:Name="ExerciseNameLabel" FontSize="Medium" />
        <Label Text="{Binding CurrentExercise.Reps}" x:Name="ExerciseRepsLabel" FontSize="Medium" />
        <Label Text="{Binding CurrentExercise.Seconds}" x:Name="ExerciseTimerLabel" FontSize="Medium" />
        <Label Text="{Binding ExerciseNumber}" x:Name="ExerciseCountLabel" FontSize="Small" />
        <Button x:Name="DoneButton" Text="Done" Command="{Binding DoneCommand}" Clicked="DoneButton_Clicked" />
    </StackLayout>
</ContentPage>