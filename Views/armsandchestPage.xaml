<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkoutApp.Views.armsandchestPage"
             xmlns:local="clr-namespace:WorkoutApp"
             x:DataType="local:ExerciseViewModel"
             Title="Arms and Chest Exercises">
    <StackLayout Padding="20">
        <Label Text="Arms and Chest" FontSize="40" />
        <Label Text="{Binding CurrentExercise.Name}" x:Name="ExerciseNameLabel" FontSize="Medium" Margin="0,5,0,0"/>
        <Label Text="{Binding CurrentExercise.Reps}" x:Name="ExerciseRepsLabel" FontSize="Medium" Margin="0,20,0,0"/>
        <Label Text="{Binding CurrentExercise.Seconds}" x:Name="ExerciseTimerLabel" FontSize="Medium" Margin="0,10,0,0"/>
        <Label Text="{Binding ExerciseNumber}" x:Name="ExerciseCountLabel" FontSize="Small" Margin="0,20,0,0"/>
        <Button x:Name="DoneButton" Text="Done" Command="{Binding DoneCommand}" Clicked="DoneButton_Clicked"/>
    </StackLayout>
</ContentPage>