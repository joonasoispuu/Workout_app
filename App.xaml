<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:WorkoutApp"
             xmlns:views="clr-namespace:WorkoutApp.Views"
             x:Class="WorkoutApp.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

    <Application.MainPage>
        <Shell>
            <TabBar x:Name="Tabs">
                <Tab Title="Settings" Icon="cog.svg">
                    <ShellContent ContentTemplate="{DataTemplate views:SettingsPage}"/>
                </Tab>
                <Tab Title="Profile" Icon="account.svg">
                    <ShellContent ContentTemplate="{DataTemplate views:ProfilePage}"/>
                </Tab>
                <Tab Title="Exercises" Icon="dumbbell.svg">
                    <ShellContent ContentTemplate="{DataTemplate views:ExercisePage}"/>
                </Tab>
            </TabBar>
        </Shell>
    </Application.MainPage>
</Application>
